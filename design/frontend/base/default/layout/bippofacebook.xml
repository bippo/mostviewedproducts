<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
	<default>
        <reference name="before_body_end">
        	<block type="core/template" name="bippofacebook.fbsdk" template="bippofacebook/fbsdk.phtml" />
			<remove name="xfbml" /><!-- Remove xfbml from bippoxfb theme -->
    	</reference>
    	<reference name="head">
    		 <action method="addCss"><stylesheet>css/bippofacebook.css</stylesheet></action>
    	</reference>
	</default>
	<cms_index_index>
		<reference name="head">
			<block type="core/template" name="bippofacebook.head" template="bippofacebook/head_home.phtml" />
		</reference>
		<reference name="right">
			<block type="core/template" name="bippofacebook.likebox" as="bippofacebook_like" template="bippofacebook/like_box.phtml" />
		</reference>
	</cms_index_index>
	<catalog_category_default>
		<reference name="head">
			<block type="core/template" name="bippofacebook.head" template="bippofacebook/head_category.phtml" />
		</reference>
		<reference name="after_title">
			<block type="core/template" name="bippofacebook.like" as="bippofacebook_like" template="bippofacebook/like_count.phtml" />
		</reference>
	</catalog_category_default>	
	<catalog_category_layered>
		<reference name="head">
			<block type="core/template" name="bippofacebook.head" template="bippofacebook/head_category.phtml" />
		</reference>
		<reference name="after_title">
			<block type="core/template" name="bippofacebook.like" as="bippofacebook_like" template="bippofacebook/like_count.phtml" />
		</reference>
	</catalog_category_layered>	
    <catalog_product_view>
        <reference name="head">
            <block type="core/template" name="bippofacebook.head" template="bippofacebook/head_product.phtml"/>
        </reference>
		<reference name="product.info">
			<block type="core/text_list" name="product.other" as="other">
				<block type="core/template" name="bippofacebook.send" template="bippofacebook/send.phtml" />
				<block type="core/template" name="bippofacebook.like" template="bippofacebook/like_faces.phtml" />
			</block>
		</reference>
    </catalog_product_view>
     <cms_page>
     	<reference name="after_title">
			<block type="core/template" name="bippofacebook.like" template="bippofacebook/like_count.phtml" />
		</reference>
     </cms_page>
</layout>
